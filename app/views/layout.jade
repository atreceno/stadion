        script(src='components/bootstrap/js/bootstrap-collapse.js')
        script(src='components/bootstrap/js/bootstrap-carousel.js')
        script(src='components/bootstrap/js/bootstrap-typeahead.js')
        script(src='components/angular/angular.js')
        script(src='components/angular-resource/angular-resource.js')
        script(src='components/angular-bootstrap/ui-bootstrap-tpls.min.js')
        script(src='http://d3js.org/d3.v3.min.js')
        script(src='scripts/app.js')
